
@{
    ViewData["Title"] = "RideCategory";
}

<div class="container-fluid">
    <div class="row heading-section">
        <div class="col-sm-6  heading-div">
            <h2 style="color : #501872" class="user-texts">Ride Category</h2>
        </div>

        <div class="col-sm-6 text-end">
            <a style="background: #501872; font-size:18px;"   class="btn btn-Add text-white " onclick="OpenRideCategoryForm()"><i class="fa fa-plus pr-1"></i> Add Ride Category</a>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive table customTable mt-4">
                <table id="datatble_RideCategoryList" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Ride Category Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>



</div>


<div class="container-fluid" style="display:none" id="newRideCategoryAdd">
    <form method="post" enctype="multipart/form-data" id="newRideCategoryAddForm">
        
        <div class="create-from">
            <div class="col-md-12">
                <div class="card">
                    <div class="row m-0">
                        <div class="col-md-3  country-txt  pb-3">
                            <label class="pb-2">Ride Category Name <span class="text-danger">*</span></label>
                            <input id="RideCategory_id" hidden />
                            <input type="text" class="form-control border-3 mb-2" id="RideCategoryName" placeholder="Enter Ride Category Name">
                            <span  class="small" role="alert" id="rideError" style="display:none">
                            </span>
                        </div>
                        <div class="modal-footer models p-3">
                            <input type="submit" value="Save" style="font-size:18px;" id="EditButton" class="btn cstm-btn px-4 btn-Add"/>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



@section Scripts
    {
     <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="~/js/custom/MasterTable.js"></script>

}


