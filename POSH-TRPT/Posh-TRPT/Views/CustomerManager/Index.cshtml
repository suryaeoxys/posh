@{
	ViewData["Title"] = "Index";
}

<h1 class="text-left mb-3" style="color : #501872">Rider Management </h1>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="table-responsive table customTable mt-2">
				<table id="tblCustomer" class="display" style="width:100%">
					<thead>
						<tr>
							<th>S.No.</th>
							<th>Rider Name</th>
							<th>Email ID</th>
							<th>Contact Number</th>
							<th>Action</th>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
</div>
<br />
<br />
<div class="container-fluid" style="display:none" id="EditCustomerForm">
	<form method="post" enctype="multipart/form-data" id="EditCustomerForm">
		<div class="create-from">
			<div class="col-md-12">
				<div class="card">
					<div class="row cstmroww m-0">
						<div class="col-md-4 pb-3 country-txt">
							<label class="pb-2">Rider Name <span class="text-danger">*</span></label>
							<input type="text" class="form-control mb-2" id="CustomerName" readonly>
						</div>
						<div class="col-md-4 pb-3 country-txt">
							<label class="pb-2">Contact Number <span class="text-danger">*</span></label>
							<input id="CustomerId" hidden />
							<input type="text" required class="form-control mb-2" readonly id="CustomerMobile">

						</div>
						<div class="col-md-4 pb-3 country-txt">
							<label class="pb-2">Email Id</label>
							<input id="CustomerId" hidden />
							<input type="text" class="form-control mb-2" id="CustomerEmail" readonly>

						</div>						
					</div>
				</div>
			</div>
		</div>
	</form>
</div>



@section Scripts
	{
	<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css">
	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
	<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
	<script type="text/javascript" charset="utf8" src="~/js/custom/CustomerManagement.js"></script>

}



