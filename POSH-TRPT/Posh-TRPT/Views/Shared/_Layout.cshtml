
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Posh_TRPT</title>

    <!-- jquerry -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- custom -->
    <link rel="stylesheet" href="~/css/custom/StyleSheet.css" type="text/css">

</head>
<body>
    <div class="main">
        @*<aside>*@
        <!--Render aside menu-->
        <partial name="_SideBar" />
        <!--End  -->
        @*</aside>*@


        <div class="main-content-container">
            <div class="navbar d-flex">
                <!-------navbarstrat-------->
                <div class="left-side ">
                    <span class="sidebars menubtn btn"><i class="fa-solid fa-bars"></i></span>
                </div>
                @if (User.Identity!.IsAuthenticated)
                {
                    <div class="right-side ">
                        <span><i class="fa-solid fa-magnifying-glass"></i></span>
                        <span><i class="fa-solid fa-bell"></i></span>
                        <span class="text-white dropdown  log">
                            <img src="" alt=""> @User!.Identity.Name <div class="dropdown">
                                <a class="btn  " href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                    <i class="fa-solid fa-angle-down"></i>

                                </a>

                                <ul class="dropdown-menu profile" aria-labelledby="dropdownMenuLink">
                                    <li><a class="dropdown-item" href="#">Profile</a></li>
                                    <li><a class="dropdown-item" href="/Account/LogOut">LogOut</a></li>

                                </ul>
                            </div>


                            
                    </span>

                    </div>
                }
                else
                {
                    <div class="right-side ">
                        <span><i class="fa-solid fa-magnifying-glass"></i></span>
                        <span><i class="fa-solid fa-bell"></i></span>
                        <span class="text-white dropdown  log">
                            <img src="" alt=""><div class="dropdown">
                                <a class="btn  " href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                    <i class="fa-solid fa-angle-down"></i>

                                </a>

                                <ul class="dropdown-menu profile" aria-labelledby="dropdownMenuLink">
                                    <li><a class="dropdown-item" href="#">Profile</a></li>
                                    <li><a class="dropdown-item" href="/Account/LogOut">LogOut</a></li>

                                </ul>
                            </div>


                           
                    </span>

                    </div>
                }
            </div>

            <div class="main-content p-2">
                <div class="content p-2">
                    @Html.AntiForgeryToken()
                    @RenderBody()
                </div>
            </div>
        </div>

    </div>

    <!-- js-start -->
    <script>
                $(document).ready(function () {
                    $(".sidebars").click(function () {
                        $(".sidebar").toggleClass("open")
                        $(".sidebar").toggleClass("side")

                    })





                        $(".menu-categories li a").each(function (index)
                        {


                           if($( this ).attr('href').split("/")[1] == 'MasterTable' && window.location.href.indexOf( $( this ).attr('href'))>0)
                              {

                                  if(window.location.href.indexOf( $( this ).attr('href'))>0)
                                       {
                                            $(this).parent().addClass("cstm-active")
                                             $('.accordian-part').show("actives")
                                            $('.accordian').addClass("active");
                                       }
                              }

                           else if(window.location.href.indexOf( $( this ).attr('href'))>0)
                              {
                                  $(this).parent().addClass("active")

                              }

                         })




                });
                  $(".accordian").on('click',function () {

                      if ($(".accordian").hasClass("active")) 
                      {
                         $('.accordian-part').show("actives")
                          $('.accordian').addClass("active");
                      }
                      else
                      {
                           $('.accordian-part').toggleClass("actives", 700)
                           $('.accordian').addClass("active");
                      }
                       
                    })

    </script>






    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js" integrity="sha512-2rNj2KJ+D8s1ceNasTIex6z4HWyOnEYLVC3FigGOmyQCZc2eBXKgOxQmo3oKLHyfcj53uz4QMsRCWNbLd32Q1g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
